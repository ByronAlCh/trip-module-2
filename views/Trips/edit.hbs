<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1> Modificar Viaje</h1>

            {{#with owner}}
            <h2>{{name}}</h2>
            {{/with}}
            <hr>

            <form action="/guia-viajes/editar/{{_id}}" method="POST">


                <div class="mb-3">
                    <label for="aut" class="form-label">Pais</label>
                    <input type="text" class="form-control" id="aut" name="country" value="{{country}}">
                </div>

                <div class="mb-3">
                    <label for="desc" class="form-label">Ciudad</label>
                    <input type="text" class="form-control" id="desc" name="city" value="{{city}}">
                </div>

                <div class="mb-3">
                    <label for="rat" class="form-label">Edad</label>
                    <input type="number" class="form-control" id="rat" name="minimumAge" value="{{minimumAge}}">
                </div>
                <div class="mb-3">
                    <label for="rat" class="form-label" aria-placeholder="DD-MM-YY"> Fecha</label>
                    <input type="date" class="form-control" id="rat" name="date" value="{{date}}">
                </div>
                <div class="mb-3">
                    <label for="rat" class="form-label"> Descripcion</label>
                    <input type="text" class="form-control" id="rat" name="description" value="{{description}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark"> Editar </button>
                </div>
            </form>

        </div>
    </div>
</div>