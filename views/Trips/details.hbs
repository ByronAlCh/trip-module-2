<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body" style="font-size: x-large;">
                    <h4 class="card-title"><strong>{{namePlace}}</strong></h4>
                    <h5 class="card-title" style="font-size: x-large;"> Pais de destino:{{country}}</h5>
                    <p> Cuidad de destino : {{city}}</p>
                    <p> Fecha de salida : {{date}}</p>
                    <p class="card-text"> Descripcion: {{description}}</p>


                    <div class="d-flex justify-content-between mb-3">
                        <a href="/guia-viajes/comentar/{{_id}}" class="btn btn-info"> Comentar </a>
                        <form action="/guia-viajes/apuntarse/{{_id}}" method="POST">
                            <input type="submit" value="Apuntarse" class="btn btn-warning">
                        </form>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="/guia-viajes/editar/{{_id}}" class="btn btn-dark"> Editar </a>
                        <form action="/guia-viajes/eliminar/{{_id}}" method="POST">
                            <input type="submit" value="eliminar" class="btn btn-danger">
                        </form>
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <h2><strong>Participantes</strong></h2>
                    <ul>
                        {{#each attendees}}
                        <li style="font-size: x-large;">{{this.name}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="position-relative">
                <figure id="map"></figure>
            </div>
        </div>
    </div>
</div>

<form action="/detalles/{{_id}}/comentarios" method="POST">
    <div class="form-group">
        <textarea class="form-control" rows="5" name="comentario"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar comentario</button>
</form>



