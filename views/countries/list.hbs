<div class="text-center">
    <div class="row align-items-start">
        <div class="col">
            <div class="container mb-5">
                <label for="exampleDataList" class="form-label"></label>
                <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder=" Buscar paises...">
                <datalist id="datalistOptions">
                    {{#each reponses}}
                    <option value="{{name}}">
                        {{/each}}
                </datalist>
            </div>

            <div>
                {{#each reponses}}
                <div class="card">
                    <div class="card-body">
                        <h1>{{emoji}}</h1>
                        <h5 class="card-title"> {{name}}</h5>
                        <p class="card-text"> {{capital}}</p>

                        <a href="/paises/{{iso2}}/estados" class="btn btn-dark"> Detalles</a>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>

    </div>

</div>