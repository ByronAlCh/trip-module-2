            <div>
                {{#each reponses}}

                <div class="card">

                    <div class="card-body">
                        <h1>{{emoji}}</h1>
                        <h5 class="card-title"> {{name}}</h5>
                        <p class="card-text"> {{capital}}</p>
                        <a href="/paises/{{iso2}}/estados" class="btn btn-dark"> Detalles</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="col">
            <div class="position-relative">
                <figure id="myMap"></figure>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="/js/map.js"></script>
        <script src="/services/countries.services.js"></script>
