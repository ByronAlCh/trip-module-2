<div class="container">
    <h1>Bienvenido Admin</h1>
    <hr>
</div>

<div class="container text-center">
    <div class="row align-items-start">
        {{#each user}}
        <div class="col-md-4">
            <div class="card mb-4" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{cover}}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><strong>Name:</strong> {{name}}</h5>
                            <p class="card-text"><strong>UserName:</strong> {{username}}</p>
                            <p class="card-text"><strong>Email: </strong> {{email}}</p>
                            <form action="/eliminar/{{_id}}" method="POST">
                                <input type="submit" value="eliminar" class="btn btn-danger">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>